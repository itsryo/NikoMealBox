@model NikoMealBox.Models.MemberCenterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "會員中心";
}
@section topCSS{

    <link href="~/Content/MemberCenterPage/MemeberCenter.css" rel="stylesheet" />
}

<div class="container">
    <div class="row">
        <div class=" col-sm-12 col-md-12 d-flex ">
            <a class="hyper  nav-link border rounded-pill  d-inline-block border-info " href="@Url.Action("OrderCollect","CartAll")">盒餐訂單 </a>
            <a class="hyper ml-2 nav-link border rounded-pill  d-inline-block border-info " style="background-color:#008A84; color:#FFF;" href="#">會員資料維護</a>
            @if (ViewData["ProviderKey"] == "")
            {
            <a class="hyper ml-2 nav-link border rounded-pill  d-inline-block border-info " href="@Url.Action("ChangePassword","Manage")">密碼變更</a>
            }
            <a class="hyper ml-2 nav-link border rounded-pill  d-inline-block bg-danger text-white" href="javascript:document.getElementById('logoutForm').submit()"> 登出 <span class="sr-only">(current)</span></a>
        </div>
    </div>
    <div class="sectionarea mt-2">
      
            <div class="container body-content">
                @*<h2>@ViewBag.Title</h2>*@
                @using (Html.BeginForm("MemeberCenter", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                
                    <h3 class="subtitle" style="color:#008A84;">會員資料</h3>
                    <hr />
                    <div class="form-group row col-12">
                        @Html.LabelFor(m => m.Name, new { @class = "mt-2 col-3 text-center text-justify control-label" })
                        <div class="col-9">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group row col-12">
                        @Html.LabelFor(m => m.Mobile, new { @class = "mt-2 col-3 text-center text-justify control-label" })
                        <div class="col-9">
                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group row col-12 ">
                        @Html.LabelFor(m => m.Height, new { @class = "mt-2 col-3 text-center text-justify control-label " })
                        <div class="col-9">
                            @Html.TextBoxFor(m => m.Height, new { @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group  row col-12 ">
                        @Html.LabelFor(m => m.Weight, new { @class = "mt-2 col-3 text-center text-justify control-label " })
                        <div class="col-9">
                            @Html.TextBoxFor(m => m.Weight, new { @type = "Text" , pattern = "[1-9][0-9]{2}{.,1}[0-9]{2}", min = 0, max = 100, @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group row col-12">
                        @Html.LabelFor(m => m.Gender, new { @class = "mt-2 col-3 text-center text-justify control-label" })
                        <div class="col-9">
                            @Html.DisplayFor(m => m.Gender, new { @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group row col-12">
                        @Html.LabelFor(m => m.Birthday, new { @class = "mt-2 col-3 text-center text-justify control-label" })
                        <div class="col-9">
                            @Html.DisplayFor(m => m.Birthday, new { @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group row col-12">
                        @Html.LabelFor(m => m.Address, new { @class = "mt-2 col-3 text-center text-justify control-label" })
                        <div class="col-9">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control text-center text-justify rounded-pill" })
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-center text-center ">
                        <div class="col-md-offset-2 col-md-10 mb-3">
                            <input type="submit" class="btn btn-default btn-danger" value="確認送出" />
                            <a href="@Url.Action("MemeberCenter","Account")"><input type="button" id="clean" class="btn btn-default btn-success" value="重新填寫" /></a>
                            <a href="@Url.Action("Index","Home")"><input type="button" id="back" class="btn btn-default btn-primary" value="回主頁" /></a>
                        </div>
                    </div>
                }
            </div>
        
    </div>
</div>
